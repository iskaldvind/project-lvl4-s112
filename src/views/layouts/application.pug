include /mixins/forms.pug

doctype html
html(lang="en")
    head
        title= Title
        script(src='/assets/vendor.js')
        script(src='/assets/application.js')
    body
        nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
            button.navbar-toggler.navbar-toggler-right
                span.navbar-toggler-icon
            a.navbar-brand(href="/") Task Manager
            .collapse.navbar-collapse
                if isSignedIn()
                    ul.navbar-nav
                        li.nav-item.active
                            a.nav-link(href=urlFor('users#show', { id: signedId() })) Profile
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href=urlFor('users#index')) Users
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href=urlFor('tasks#index')) Tasks
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href=urlFor('sessions#destroy') data-method='delete' rel='nofollow') Sign Out
                else
                    ul.navbar-nav.mr-auto
                    ul.navbar-nav.navbar-right
                        li.nav-item
                            a.nav-link.active(href=urlFor('sessions#new')) Log In
                        li.nav-item
                            a.nav-link(href=urlFor('users#new')) Sign Up
        .container.col-12.align-content-center(style='position: absolute; top: 0')
            .col-12
                - const msg = flash.get()
                if msg
                    .alert.alert-info.col-md-8.col-md-offset-2= msg
        block content