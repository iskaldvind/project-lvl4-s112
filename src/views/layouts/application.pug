doctype html
html(lang="en")
    head
        title= Title
        script(src='/assets/vendor.js')
        script(src='/assets/application.js')
    body
        nav.navbar.navbar-default.static-navbar-top.bg-faded
            .container
                a.navbar-brand(href="/") Task Manager
                .collapse.navbar-collapse
                    if isSignedIn()
                        ul.navbar-nav.mr-auto
                            li.nav-item.active
                                a.nav-link(href=urlFor('root')) Users
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href=urlFor('root') data-method='delete' rel='nofollow') Sign Out
                    else
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href=urlFor('root')) Sign In
                            li.nav-item
                                a.nav-link(href=urlFor('root')) Sign Up
        .container
            - const msg = flash.get()
            if msg
                .alert.alert-info.m-3= msg
            block content