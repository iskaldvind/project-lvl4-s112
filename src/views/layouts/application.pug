doctype html
html(lang="en")
    head
        title= Title
        script(src='/assets/vendor.js')
        script(src='/assets/application.js')
    body
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href=urlFor('root')) Project name
                #navbar.navbar-collapse.collapse
                    if isSignedIn()
                        ul.nav.navbar-nav
                            li.active
                                a(href=urlFor('users')) Users
                        ul.nav.navbar-nav.navbar-right
                            li.active
                                .a(href=urlFor('root') data-method='delete' rel='nofollow') Log out
                    else
                        ul.nav.navbar-nav.navbar-right
                            li.active
                                a(href=urlFor('root')) Log In
                            li
                                a(href=urlFor('root')) Sign Up
        .container
            - const msg = flash.get()
            if msg
                .alert.alert-info.m-3= msg
            block content