extends /layouts/application.pug

block content
    if isSignedIn()
        .container.align-content-center.justify-content-center
            .py-4
                - const usersProfileTitle = `${user.fullName}'s profile`
                h2.text-center Users directory
        .container.col-6.mt-4
            .row.p-3
                .col-6.text-nowrap
                    b Full Name
                .col-6.text-nowrap= usersProfileTitle
            .row.p-3
                .col-6.text-nowrap
                    b E-mail
                .col-6.text-nowrap= user.email
            .row.p-3
                .col-6.text-nowrap
                    b ID
                .col-6.text-nowrap= formatId(user.id)

            if isOwner
            .row.form-group.mt-3
                .col-md-6
                    form(action=urlFor('users#edit', { id: user.id }) method='get')
                        button.btn.btn-warning(type='submit') Update account
                .col-md-6
                    form(action=urlFor('users#destroy', { id: user.id }) method='post')
                        button.btn.btn-danger(type='submit' name='_method' value='delete') Delete account