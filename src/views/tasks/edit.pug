extends /layouts/application.pug

block content
    .container.align-content-center.justify-content-center.col-lg-6
        h2.form-signin-heading.py-2 Edit Task
        +formFor(f, 'form-signin', { url: urlFor('tasks#update', { id }), method: 'post' })
            +input(f, 'name')
            +input(f, 'tags')
            +textarea(f, 'description')
            +reselect(f, 'assignedToId', users)
            input(type='hidden', name='_method' value='patch')
            +button(f, 'Save')